generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Session {
  accessToken String @unique
  tokenType   String
  expiresIn   Int
  user User @relation(fields: [userId], references: [userId], onDelete: Cascade, onUpdate:Cascade ) 
  userId Int @unique
}

model User {
  id       Int  @id  @default(autoincrement())
  userId   Int @unique
  firstName String
  lastname String
  email    String    @unique
  hash     String
  level    Int?
  publicId String  @unique
  session Session[]
  business Business[]
  @@map("user")
}

model Business {
  id Int @id @default(autoincrement())
  businessId Int @unique
  publicId String  @unique
  name String
  user User @relation(fields: [userId], references: [userId] , onDelete: Cascade) 
  userId Int 
  @@map("business")
}